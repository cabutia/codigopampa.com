---
layout: base.njk
---

<article class="blog-post bg-gradient-to-b from-gray-50 to-white">

    <!-- Post header -->
    <header class="w-full z-0 relative">
        <div class="w-full h-[428px] bg-gray-200 overflow-hidden">
            <img src="/images/sample_image.jpg" alt="Foo" class="w-full object-center object-cover">
            <div class="absolute inset-0 bg-black/50"></div>
        </div>
        <div class="absolute inset-0 flex-center">
            <div class="container mx-auto -mt-[50px]">
                <h1 class="text-white drop-shadow font-display text-6xl text-center font-bold">
                    {{ title }}
                </h1>
            </div>
        </div>
    </header>

    <!-- Post container -->
    <div class="w-full flex flex-col -mt-[100px] z-10 relative">
        <div class="bg-white w-full max-w-4xl mx-auto rounded-lg relative">
            <div class="absolute inset-x-0 bg-black -z-10 blur-2xl w-full h-1/2 max-h-[100px] opacity-20"></div>
            <!-- White overlap -->
            <div class="w-full py-2 flex gap-4 items-center border-b px-8 h-[100px]">
                {% set authorPicSize = 'size-14' %}
                {% include "author-profile.njk" %}
                <div class="flex flex-col font-extralight text-sm">
                    <p>
                        <a href="#" class="text-green-600 underline underline-offset-2">Desarrollo frontend</a>
                    </p>
                    <p class="text-gray-600 text-xs">
                        Publicado el 25 de septiembre
                    </p>
                    <p class="text-gray-600 text-xs">
                        {{ content | estimatedTime }} de lectura.
                    </p>
                </div>
                <div class="flex items-center ml-auto gap-2 -mt-2">
                    {% set class = 'size-6' %}
                    <div class="flex flex-col items-center text-gray-600 hover:text-blue-400 transition-colors cursor-pointer">
                        <div class="size-12  rounded-xl flex-center">
                            {% include "icons/share.njk" %}
                        </div>
                        <span class="text-xs">0</span>
                    </div>
                    <div class="flex flex-col items-center text-gray-600 hover:text-yellow-500 transition-colors cursor-pointer">
                        <div class="size-12  rounded-xl flex-center">
                            {% include "icons/bookmark.njk" %}
                        </div>
                        <span class="text-xs">0</span>
                    </div>
                    <div class="flex flex-col items-center text-gray-600 hover:text-pink-400 transition-colors cursor-pointer">
                        <div class="size-12  rounded-xl flex-center">
                            {% include "icons/heart.njk" %}
                        </div>
                        <span class="text-xs">24</span>
                    </div>
                </div>
            </div>

            <!-- The actual post content -->
            <div class="content w-full flex flex-col gap-2 py-4 text-xl font-extralight text-gray-600 px-8 mx-auto min-h-screen">
                {{ content | safe }}
            </div>
        </div>

    </div>
    <!-- The author -->
    <div class="max-w-4xl mx-auto px-8 mb-12 mt-12 flex flex-col gap-12">
        <hr class="w-1/2 mx-auto">
        {% include "author.njk" %}
    </div>
</article>